                                <system:DateTime xmlns:system="clr-namespace:System;assembly=mscorlib">
                                    1966-JUL-30
                                </system:DateTime>
                            </Button.CommandParameter>
                        </Button>-->
                    </Grid>
                </TabItem>

                <TabItem
                    Background="Transparent"
                    Header="{materialDesign:PackIcon Kind=User,
                                                     Size=24}"
                    Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                    TabIndex="1">
                    <Grid Width="600" Height="500">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="53*" />
                            <RowDefinition Height="135*" />
                            <RowDefinition Height="62*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15*" />
                            <ColumnDefinition Width="85*" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.RowSpan="3"
                            BorderBrush="White"
                            BorderThickness="3"
                            CornerRadius="8"
                            RenderTransformOrigin="0.5,0.422" />



                        <!--<Button
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding ElementName=LoginWindow}">
                <materialDesign:PackIcon Kind="Close" />

            </Button>-->
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Height="Auto"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding BackCommand}"
                            CommandParameter="{Binding ElementName=contentControlAdd}">

                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Foreground="DimGray"
                                Kind="ArrowBack" />


                        </Button>


                        <StackPanel
                            Grid.Column="1"
                            Height="0"
                            Margin="0,53"
                            VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,-20"
                                HorizontalAlignment="Center"
                                FontFamily="helvetica"
                                FontSize="22"
                                FontWeight="Light"
                                Foreground="Black"
                                Text="Register new user" />
                        </StackPanel>


                        <StackPanel
                            Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.Column="1">

                            <StackPanel Grid.Row="1" Orientation="Horizontal">


                                <StackPanel Margin="150,20,0,0" DockPanel.Dock="Left">

                                    <StackPanel Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="User" />
                                        <TextBox
                                            Width="200"
                                            Margin="8,0,0,0"
                                            materialDesign:HintAssist.HelperText="Insert user"
                                            materialDesign:HintAssist.Hint="USERNAME"
                                            FontSize="18">
                                            <TextBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="USERNAME"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </TextBox.Text>

                                        </TextBox>

                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>

                            <Border
                                Width="250"
                                Height="2"
                                Background="White"
                                Opacity="0.5" />


                            <StackPanel
                                Grid.Row="1"
                                Margin="0,20,0,0"
                                Orientation="Horizontal">

                                <StackPanel Margin="150,20,0,0" DockPanel.Dock="Left">

                                    <StackPanel Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="Password" />
                                        <TextBox
                                            Width="200"
                                            Margin="8,0,0,0"
                                            materialDesign:HintAssist.HelperText="Insert password"
                                            materialDesign:HintAssist.Hint="PASSWORD"
                                            FontSize="18">
                                            <TextBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="PASSWORD"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </TextBox.Text>

                                        </TextBox>

                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>

                            <Border
                                Width="250"
                                Height="2"
                                Background="White"
                                Opacity="0.5" />
                        </StackPanel>

                    </Grid>

                </TabItem>

                <TabItem
                    Background="Transparent"
                    Header="{materialDesign:PackIcon Kind=AttachMoney,
                                                     Size=24}"
                    Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                    TabIndex="2">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <!--  back button  -->
                            <ColumnDefinition Width="auto" />
                            <!--  Content part  -->
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />

                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!--  button to back  -->
                        <Button
                            Grid.RowSpan="3"
                            Height="95"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding BackCommand}"
                            CommandParameter="{Binding ElementName=contentControlAdd}">

                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Foreground="DimGray"
                                Kind="ArrowBack" />
                        </Button>





                        <StackPanel
                            Grid.Column="1"
                            Margin="50,0,20,40"
                            Orientation="Vertical">

                            <TextBlock
                                Foreground="DimGray"
                                Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                                Text="Salary Init" />


                            <TextBlock
                                Margin="15,30,0,0"
                                FontSize="17"
                                Foreground="DimGray"
                                Style="{StaticResource MaterialDesignButtonTextBlock}"
                                Text="Basic wage" />

                            <TextBox
                                Width="200"
                                Margin="15,10,0,0"
                                HorizontalAlignment="Left"
                                materialDesign:HintAssist.HelperText="Eg: 100.00.000 VND"
                                FontSize="17"
                                Foreground="DimGray"
                                Text="{Binding BASIC_WAGE, Mode=TwoWay}" />


                            <TextBlock
                                Margin="15,30,0,0"
                                FontSize="17"
                                Foreground="DimGray"
                                Style="{StaticResource MaterialDesignButtonTextBlock}"
                                Text="Overtime wage" />

                            <TextBox
                                Width="200"
                                Margin="15,10,0,0"
                                HorizontalAlignment="Left"
                                materialDesign:HintAssist.HelperText="Eg: 100.00.000 VND"
                                FontSize="17"
                                Foreground="DimGray"
                                Text="{Binding OVERTIME_SALARY, Mode=TwoWay}" />

                            <TextBlock
                                Margin="15,30,0,0"
                                FontSize="17"
                                Foreground="DimGray"
                                Style="{StaticResource MaterialDesignButtonTextBlock}"
                                Text="Coefficient" />

                            <TextBox
                                Width="200"
                                Margin="15,10,0,0"
                                HorizontalAlignment="Left"
                                materialDesign:HintAssist.HelperText="Eg: 0.3"
                                FontSize="17"
                                Foreground="DimGray"
                                Text="{Binding COEFFICIENT, Mode=TwoWay}" />




                        </StackPanel>


                        <StackPanel
                            Grid.Column="2"
                            Margin="0,0,0,30"
                            VerticalAlignment="Bottom">

                            <TextBlock
                                Margin="15,0,0,0"
                                FontSize="17"
                                Foreground="DimGray"
                                Style="{StaticResource MaterialDesignButtonTextBlock}">
                                Leave some notes<LineBreak />
                                for
                                Accouting Department</TextBlock>

                            <TextBox
                                Width="300"
                                Margin="15,10,20,0"
                                HorizontalAlignment="Left"
                                materialDesign:HintAssist.HelperText="Detail about the job ?"
                                AcceptsReturn="True"
                                FontSize="17"
                                Foreground="DimGray"
                                MinLines="8"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Text="{Binding NOTE, Mode=TwoWay}"
                                TextWrapping="Wrap" />



                        </StackPanel>


                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="100"
                            Height="50"
                            Margin="0,20,30,0"
                            HorizontalAlignment="Right"
                            Command="{Binding ConfirmCommand}"
                            CommandParameter="{Binding ElementName=contentControlAdd}"
                            Content="Confirm"
                            FontSize="18"
                            FontWeight="Light" />

                    </Grid>
                </TabItem>


            </TabControl>
        </Grid>
    </ContentControl>
</UserControl>

