<UserControl
    x:Class="HRMS.HR.uCon.uConAddEmployee"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HRMS.HR.uCon"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:HRMS.HR.ViewModel"
    Width="auto"
    Height="auto"
    d:DataContext="{d:DesignInstance Type=viewmodel:ListEmployeeViewModel}"
    Background="Transparent"
    mc:Ignorable="d">


    <ContentControl x:Name="contentControlAdd" Height="auto">
        <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="575*" />
                <ColumnDefinition Width="219*" />
            </Grid.ColumnDefinitions>

            <TabControl
                x:Name="TabItemBtn"
                Grid.ColumnSpan="2"
                Margin="0,0,0.4,-0.2"
                materialDesign:ColorZoneAssist.Mode="Standard"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="Transparent"
                Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                TabStripPlacement="Right">


                <TabItem
                    Background="Transparent"
                    Header="{materialDesign:PackIcon Kind=FolderInformation,
                                                     Size=24}"
                    Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                    TabIndex="0">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>






                        <Button
                            Grid.Row="2"
                            Height="Auto"
                            Margin="0,-50,0,217.8"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding BackCommand}"
                            CommandParameter="{Binding ElementName=contentControlAdd}">

                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                Foreground="DimGray"
                                Kind="ArrowBack" />


                        </Button>
                        <DockPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,0">



                            <StackPanel Margin="20" DockPanel.Dock="Left">

                                <StackPanel Orientation="Horizontal">

                                    <materialDesign:PackIcon
                                        Width="30"
                                        Height="30"
                                        VerticalAlignment="Center"
                                        Foreground="DimGray"
                                        Kind="User" />
                                    <TextBox
                                        Width="260"
                                        Margin="8,0,0,0"
                                        materialDesign:HintAssist.HelperText="Employee full name."
                                        materialDesign:HintAssist.Hint="Name"
                                        FontSize="18">
                                        <TextBox.Text>
                                            <Binding
                                                Mode="TwoWay"
                                                Path="NAME"
                                                UpdateSourceTrigger="PropertyChanged">
                                                <Binding.ValidationRules />
                                            </Binding>
                                        </TextBox.Text>

                                    </TextBox>

                                </StackPanel>



                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <materialDesign:PackIcon
                                        Width="30"
                                        Height="30"
                                        VerticalAlignment="Center"
                                        Foreground="DimGray"
                                        Kind="IdCard" />
                                    <TextBox
                                        Width="260"
                                        Margin="8,0,0,0"
                                        materialDesign:HintAssist.HelperText="ID Card number"
                                        materialDesign:HintAssist.Hint="ID"
                                        FontSize="18">
                                        <TextBox.Text>
                                            <Binding
                                                Mode="TwoWay"
                                                Path="ID_CARD"
                                                UpdateSourceTrigger="PropertyChanged">
                                                <Binding.ValidationRules />
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>

                                </StackPanel>

                                <StackPanel Margin="0,40,0,0" Orientation="Horizontal">


                                    <DatePicker
                                        x:Name="BirthdayDP"
                                        Width="300"
                                        Height="60"
                                        materialDesign:HintAssist.Hint="Birthday"
                                        FontSize="22"
                                        SelectedDateFormat="Short"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}">
                                        <DatePicker.SelectedDate>
                                            <Binding
                                                Mode="TwoWay"
                                                Path="BIRTH_DATE"
                                                StringFormat="{}{0: dd/MM/yyyy}"
                                                UpdateSourceTrigger="PropertyChanged" />
                                        </DatePicker.SelectedDate>
                                    </DatePicker>
                                </StackPanel>

                            </StackPanel>



                            <Button
                                Width="220"
                                Height="220"
                                Margin="20,10,20,0"
                                Background="{Binding BRUSH}"
                                BorderThickness="{Binding BUTTONTHICKNESS}"
                                Command="{Binding AddImageCommand}"
                                DockPanel.Dock="Right"
                                Opacity="100">
                                <Image
                                    x:Name="img"
                                    Source="{Binding IMAGE_SOURCE}"
                                    Stretch="Fill" />
                            </Button>


                        </DockPanel>



                        <Separator
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,10,0,0"
                            BorderBrush="Black"
                            BorderThickness="10"
                            Opacity="0.8" />


                        <DockPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,0.2">



                            <DockPanel Margin="20" HorizontalAlignment="Left">


                                <StackPanel DockPanel.Dock="Left">




                                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="Place" />
                                        <TextBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            materialDesign:HintAssist.Hint="Birthplace"
                                            FontSize="18">
                                            <TextBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="BIRTH_PLACE"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </TextBox.Text>

                                        </TextBox>

                                    </StackPanel>





                                    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="Globe" />
                                        <TextBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            materialDesign:HintAssist.Hint="Citizenship"
                                            FontSize="18">
                                            <TextBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="CITIZENSHIP"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </TextBox.Text>
                                        </TextBox>

                                    </StackPanel>



                                    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="GenderMaleFemaleVariant" />

                                        <ComboBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            materialDesign:HintAssist.Hint="Gender"
                                            FontSize="18"
                                            Foreground="DimGray">
                                            <ComboBoxItem Content="MALE" />
                                            <ComboBoxItem Content="FEMALE" />
                                            <ComboBoxItem Content="TRANSGENDER" />
                                            <ComboBoxItem Content="NEUTRAL" />
                                            <ComboBoxItem Content="NON-BINARY" />
                                            <ComboBoxItem Content="PANGENDER" />
                                            <ComboBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="GENDER"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </ComboBox.Text>
                                        </ComboBox>


                                    </StackPanel>


                                    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="Phone" />

                                        <TextBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            materialDesign:HintAssist.Hint="Phone Number"
                                            FontSize="18"
                                            PreviewTextInput="NumberValidationTextBox">
                                            <TextBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="PHONE"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </TextBox.Text>
                                        </TextBox>


                                    </StackPanel>

                                </StackPanel>

                            </DockPanel>


                            <DockPanel Margin="20,20,30,20" HorizontalAlignment="Right">


                                <StackPanel DockPanel.Dock="Left">




                                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="CardAccountDetailsStar" />
                                        <ComboBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            materialDesign:HintAssist.Hint="ROLE"
                                            FontSize="18"
                                            Foreground="DimGray">
                                            <ComboBoxItem Content="MANAGER" />
                                            <ComboBoxItem Content="VICE MANAGER" />
                                            <ComboBoxItem Content="EMPLOYEE" />
                                            <ComboBoxItem Content="DIRECTOR" />
                                            <ComboBoxItem Content="VICE DIRECTOR" />
                                            <ComboBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="ROLE_NAME"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </ComboBox.Text>
                                        </ComboBox>

                                    </StackPanel>


                                    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="House" />
                                        <ComboBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            materialDesign:HintAssist.Hint="Department"
                                            FontSize="18"
                                            Foreground="DimGray">
                                            <ComboBoxItem Content="HUMAN RESOURCE DEPT" />
                                            <ComboBoxItem Content="ACOUNTING DEPT" />
                                            <ComboBoxItem Content="DIRECTOR DEPT" />
                                            <ComboBoxItem Content="SOFTWARE DEPT" />
                                            <ComboBoxItem Content="QUALITY MANAGEMENT DEPT" />
                                            <ComboBoxItem Content="BUSSINESS DEPT" />
                                            <ComboBoxItem Content="SUPPORT DEPT" />
                                            <ComboBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="DEPT_NAME"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </ComboBox.Text>
                                        </ComboBox>

                                    </StackPanel>



                                    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="Equalizer" />

                                        <ComboBox
                                            Width="260"
                                            Margin="10,0,0,0"
                                            materialDesign:HintAssist.Hint="Academic level"
                                            materialDesign:HintAssist.HintOpacity=".3"
                                            FontSize="18"
                                            IsEditable="True">
                                            <ComboBoxItem Content="Bachelor" />
                                            <ComboBoxItem Content="Master" />
                                            <ComboBoxItem Content="Post Doctor" />
                                            <ComboBoxItem Content="Doctor" />
                                            <ComboBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="ACADEMIC_LEVEL"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </ComboBox.Text>
                                        </ComboBox>




                                    </StackPanel>



                                    <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            Foreground="DimGray"
                                            Kind="Email" />

                                        <TextBox
                                            Width="260"
                                            Margin="8,0,0,0"
                                            materialDesign:HintAssist.Hint="Email"
                                            FontSize="18">
                                            <TextBox.Text>
                                                <Binding
                                                    Mode="TwoWay"
                                                    Path="EMAIL"
                                                    UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules />
                                                </Binding>
                                            </TextBox.Text>
                                        </TextBox>


                                    </StackPanel>



                                </StackPanel>

                            </DockPanel>

                        </DockPanel>
                        <!--  Command="{Binding ViewUser}"  -->
                        <!--  CommandParameter="{Binding ElementName=TabItemBtn}"  -->
                        <!--<Button
                            Grid.Row="3"
                            Grid.Column="1"
                            Width="150"
                            Height="50"
                            Margin="0,0,50,0"
                            HorizontalAlignment="Right"

                            Click="Button_Click"

                            Content="Next"
                            FontSize="28"
                            FontWeight="Light" >


                        </Button>-->
                        <!--<Button
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Left"
                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            Width="150"
                            Height="50"
                            Content="PASS MODEL">
                            <Button.CommandParameter>
                        -->
