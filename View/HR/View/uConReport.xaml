                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>-->
            </StackPanel>

            <DataGrid
                x:Name="dgDashboard"
                Grid.Row="1"
                Height="500"
                Margin="0,20.4,0,0"
                VerticalAlignment="Top"
                AllowDrop="True"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="True"
                IsReadOnly="True"
                ItemsSource="{Binding TimekeepingList}"
                VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="70"
                        Binding="{Binding EMPLOYEE.EMPLOYEE_ID, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="DarkSlateGray"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding EMPLOYEE.NAME, UpdateSourceTrigger=PropertyChanged}"
                        ElementStyle="{StaticResource WrapText}"
                        Foreground="DarkSlateGray"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding EMPLOYEE.DEPARTMENT.DEPT_NAME, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="DarkSlateGray"
                        Header="Department" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding EMPLOYEE.ROLE.ROLE_NAME, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="DarkSlateGray"
                        Header="Role" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding NUMBER_OF_WORK_DAY, UpdateSourceTrigger=PropertyChanged}"
                        ElementStyle="{StaticResource WrapText}"
                        Foreground="DarkSlateGray"
                        Header="Work days" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding NUMBER_OF_ABSENT_DAY, UpdateSourceTrigger=PropertyChanged}"
                        ElementStyle="{StaticResource WrapText}"
                        Foreground="DarkSlateGray"
                        Header="Absent days" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding NUMBER_OF_OVERTIME_DAY, UpdateSourceTrigger=PropertyChanged}"
                        ElementStyle="{StaticResource WrapText}"
                        Foreground="DarkSlateGray"
                        Header="Overtime days" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding NUMBER_OF_STANDARD_DAY, UpdateSourceTrigger=PropertyChanged}"
                        ElementStyle="{StaticResource WrapText}"
                        Foreground="DarkSlateGray"
                        Header="Standard working days" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</UserControl>
